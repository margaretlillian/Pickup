@model Pickup.Models.DonationPickupViewModels.AddFurnitureViewModel
<h2>Add Furniture</h2>

<form method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>


    <div class="form-group">
        <label asp-for="FurnitureCategoryID"></label>
        <select asp-for="FurnitureCategoryID" asp-items="Model.Categories"></select>
    </div>

    <input type="submit" value="Add Furniture" />

</form> 