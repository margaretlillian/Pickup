@model Pickup.Models.ManageItemsViewModels.AddItemViewModel


<h2>Add Item</h2>
<p>If you don't see the correct category for the item you want to add, please 
    <a asp-controller="ManageItems" asp-action="CreateCategory">create a category for it first</a>.</p>

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
    </div>

    <div class="form-group">
        <label asp-for="CategoryID"></label>
        <select asp-for="CategoryID" asp-items="Model.Categories"></select>
    </div>

    <button type="submit">Add Item</button>

</form>