@model Pickup.Models.ViewViewModel.ViewInformationViewModel

@if (Model.Delivery)
{
    <h2>Delivery Information</h2>
}
else
{<h2>Pickup Information</h2>}


 <table id="pickupinfo">


     <tr>
         <th colspan="2">
             @Model.FirstName @Model.LastName
         </th>
     </tr>
     <tr>
         <td>
             <span class="property-name">Scheduled By:</span>
         </td>
         <td>
             @Model.Scheduler
         </td>
     </tr>


     <tr>
         <td>
             <span class="property-name">Date Scheduled:</span>
         </td>
         <td>
             @Model.ScheduleDateTime
         </td>
     </tr>

     <tr>
         <td>
             <span class="property-name">Pickup Date / Time:</span>
         </td>
         <td>
             @Model.PickupDateTime
         </td>
     </tr>


     <tr>
         <td>
         <span class="property-name">Phone Number:</span>
             </td>
         <td>
         @Model.PhoneNumber
             </td>
     </tr>


     @if (!String.IsNullOrEmpty(Model.PhoneNumberTwo))
    {
     <tr>
     <td>
         <span class="property-name">Phone Number 2:</span></td>
     <td>
         @Model.PhoneNumberTwo
     </td>
     </tr>}

     <tr>
         <td>
         <span class="property-name">Address:</span>
             </td>
         <td>
             @Model.StreetAddress
             @if (!String.IsNullOrEmpty(Model.Apt))
            {<span>#</span> @Model.Apt
    }<br />
             @Model.City, @Model.ZIP
         </td>
     </tr>

     @if (!String.IsNullOrEmpty(Model.Neighborhood))
    {
     <tr>
     <td>
         <span class="property-name">Neighborhood:</span>
         </td>
     <td>
         @Model.Neighborhood
         </td>
     </tr>}


     <tr>
         <td>
         <span class="property-name">Call En Route:</span>
             </td>
         <td>
         @Model.CallEnRoute
             </td>
     </tr>


     @if (!String.IsNullOrEmpty(Model.SpecialInstructions))
    {
     <tr>
     <td>
         <span class="property-name">Special Instructions:</span>
         </td>
     <td>
         @Model.SpecialInstructions
         </td>
     </tr>}

     <tr>
         <td>Furniture Donated</td>
     @foreach (var x in Model.Furniture)
    {<td>
         <ul>
     <li>
         @x.Name - @if (Model.Delivery)
        {@x.Description}
else
{ @x.Quantity}
     </li>
             </ul>
             </td>
}
         </tr>
 </table>