
@using Pickup.Models.ScheduleViewModels
@model Dictionary<DateTime, IList<MonthlyMiniCalendarViewModel>>

<table id="monthly-calendar-mini">
    <tr>
        <td>Su</td>
        <td>Mo</td>
        <td>Tu</td>
        <td>We</td>
        <td>Th</td>
        <td>Fr</td>
        <td>Sa</td>
    </tr>
    <tr>
        @foreach (KeyValuePair<DateTime, IList<MonthlyMiniCalendarViewModel>> date in Model)

        {
            int day = (int)date.Key.DayOfWeek;
            @if (date.Key.Day == 1)
            {
                @for (int i = 0; i < day; i++)
                {
                <td></td>
                }}
            <td>
                <div class="pickups-@date.Value.Count" title="@date.Value.Count">@date.Key.Day</div>
            </td>

            @if (date.Key.ToString("dddd") == "Saturday")
            {
                @:</tr>
            @:<tr>
            }
        }
    </tr>
</table>

