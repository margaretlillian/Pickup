@model Pickup.Models.DonationPickupViewModels.SearchViewModel
@{
    Layout = "_Popup";
}

<h2>Search for Existing Donor</h2>

<form asp-controller="Search" asp-action="SearchResults">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" />
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" />
    </div>

    <input type="submit" value="Search" />
</form>

@if (Model.Donors != null)
{@if (@Model.Donors.Count == 0)
    {<h3>No Results</h3>}
@foreach (Donor donor in Model.Donors)
{

    <div class="donor-new-address">
        <h4>@donor.FirstName @donor.LastName</h4>
        <ul>
            <li><span class="name">Phone Number: </span>@donor.PhoneNumber</li>
            @if (donor.PhoneNumberTwo != null)
            {
                <li><span class="name">Phone #2: </span>@donor.PhoneNumberTwo</li>}
        </ul>
        <p>
            <a href="JavaScript:void(0);"
               onclick="openInParent('Address?customerId=@donor.ID');">
                Use new address for this donor.
            </a>
        </p>

    </div>
}
}
@if (Model.Addresses != null)
{
    @foreach (Address address in Model.Addresses)
    {
        <h4>Address for: @address.Donor.FirstName @address.Donor.LastName</h4>
        <ul>
            <li>
                <span class="name">Phone Number: </span>
                @address.Donor.PhoneNumber
            </li>
            @if (address.Donor.PhoneNumberTwo != null)
            {
                <li>
                    <span class="name">Phone #2: </span>
                    @address.Donor.PhoneNumberTwo
                </li>}

            <li>
                <span class="name">Address: </span>
                @address.Street @address.Apartment <br /> @address.City  @address.ZIP
            </li>
        </ul>

        <p>
            <a href="JavaScript:void(0);"
               onclick="openInParent('CreateNew?AddressId=@address.ID');">
                Create new pickup using this address.
            </a>
        </p>


    }

}

<script>
    function openInParent(url) {
        window.opener.location.href = url;
        window.close();
    }
</script>


