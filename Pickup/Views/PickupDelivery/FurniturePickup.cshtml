@using Pickup.Models.DonationPickupViewModels
@model FurniturePickupViewModel

<h2>@ViewBag.Title</h2>
<form method="post">
    @for (int i = 0; i < Model.Categories.Count; i++)
    {<div>
    <h3>@Html.DisplayFor(model => model.Categories[i].ID)</h3>
    @for (int j = 0; j < Model.Categories[i].FurnitureLists.Count; j++)
    {
    @Html.DisplayFor(model => model.Categories[i].FurnitureLists[j].CategoryID) }
</div>
    }
    <button type="submit">Add @ViewBag.Title</button>
</form>